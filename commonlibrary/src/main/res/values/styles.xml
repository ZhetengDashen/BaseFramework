    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox"
        tools:ignore="NewApi">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorControlNormal">@color/colorPrimary</item>
    </style>
    <style name="tv_content">
        <item name="android:textColor">@color/tv_content </item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
