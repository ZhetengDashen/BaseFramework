        <item name="android:textColor">@color/white</item>
    </style>
    <style name="bt_style2_rounded">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/bt_bg2_rounded</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="bt_style_blue_40_rounded">
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/bt_bg_blue_40_rounded</item>
        <item name="android:textColor">@color/white</item>
